---
import { Image } from "astro:assets";

interface Props {
    name: string;
    role: string;
    reviewText: string;
    avatar?: ImageMetadata;
    classList?: string;
    rest?: [];
}
const { avatar, name, role, reviewText, classList, ...rest } = Astro.props;
---

<div
    class:list={classList}
    class="flex flex-col md:flex-row md:px-10 min-h-[300px] bg-base-100 justify-center items-center"
    {...rest}
>
    <div class="basis-1/3 flex flex-col items-center gap-4">
        {
            avatar ? (
                <Image src={avatar} alt={`${name}'s photo'`} />
            ) : (
                <div class="avatar placeholder">
                    <div class="bg-secondary/50 text-neutral-content w-16 md:w-20 rounded-full">
                        <span class="text-3xl ">{name.at(0)}</span>
                    </div>
                </div>
            )
        }
        <div class="text-lg font-semibold">
            {name}
            <br />
            <span class="text-sm text-center sec-text">"{role}"</span>
        </div>
    </div>
    <div
        class="sec-text text-sm py-6 md:text-lg px-6 sm:px-5 leading-7 text-justify md:leading-8 max-w-md md:max-w-3xl"
    >
        <q>
            {reviewText}
        </q>
    </div>
</div>
