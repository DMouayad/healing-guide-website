---
import { Image } from "astro:assets";

interface Props {
    name: string;
    role: string;
    reviewText: string;
    avatar?: ImageMetadata;
    classList?: string;
    rest?: [];
}
const { avatar, name, role, reviewText, classList, ...rest } = Astro.props;
---

<div
    class:list={classList}
    class="flex flex-col max-w-[80vw] mx-auto lg:max-w-fit lg:flex-row py-4 lg:py-0 md:px-10 min-h-[300px] border-base-100 border-4 rounded-md lg:justify-center lg:items-center"
    {...rest}
>
    <div
        class="basis-1/3 flex flex-row justify-start lg:flex-col items-center gap-4 m-4"
    >
        {
            avatar ? (
                <Image src={avatar} alt={`${name}'s photo'`} />
            ) : (
                <div class="avatar placeholder">
                    <div class="bg-secondary/50 text-neutral-content w-14 lg:w-20 rounded-full">
                        <span class="text-3xl ">{name.at(0)}</span>
                    </div>
                </div>
            )
        }
        <div class="text-lg font-semibold">
            {name}
            <br />
            <span class="text-sm text-center sec-text">"{role}"</span>
        </div>
    </div>
    <div
        class="sec-text text-sm md:text-lg px-6 sm:px-5 leading-7 text-justify md:leading-8 md:max-w-3xl"
    >
        <q>
            {reviewText}
        </q>
    </div>
</div>
