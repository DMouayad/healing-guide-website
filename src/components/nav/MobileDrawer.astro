---
import { getLocaleNavItems, i18n } from "@/i18n/utils";
import TopHeaderContact from "../TopHeaderContact.astro";
import LangSwitch from "./LangSwitch.astro";
---

<div class="drawer-side">
  <label for="nav-drawer" aria-label="close sidebar" class="drawer-overlay"
  ></label>
  <div class="flex flex-col menu bg-white min-h-full p-4 w-80">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-semibold">
        {i18n(Astro.currentLocale)("site-name")}
      </h2>
      <LangSwitch />
    </div>
    <div class="divider"></div>
    <div class="">
      <TopHeaderContact />
    </div>
    <ul class="text-base-content">
      {
        getLocaleNavItems(Astro.currentLocale).map((item) => (
          <li class="py-1">
            <a href={item.link}>{item.label}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
