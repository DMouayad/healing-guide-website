---
import { i18n } from "@/i18n/utils";
import SectionTitle from "../SectionTitle.astro";
import CustomCarousel from "../CustomCarousel.astro";
import ReviewCard from "../ReviewCard.astro";
const t = i18n(Astro.currentLocale);
---

<section id="reviews">
    <div class="wrapper px-4 py-11 md:py-16 md:px-36 gap-11">
        <SectionTitle
            mainTitle={t("reviews-section-mainTitle")}
            upperTitle={t("reviews-section-upperTitle")}
        />
        <CustomCarousel slidesCount={3} carouselId="reviews_carousel">
            <div id="reviews_carousel_1" class="carousel__item">
                <ReviewCard
                    name={t("review-1-name")}
                    role={t("review-1-role")}
                    reviewText={t("review-1-text")}
                />
            </div>
            <div id="reviews_carousel_2" class="carousel__item">
                <ReviewCard
                    name={t("review-2-name")}
                    role={t("review-2-role")}
                    reviewText={t("review-2-text")}
                />
            </div>
            <div id="reviews_carousel_3" class="carousel__item">
                <ReviewCard
                    name={t("review-3-name")}
                    role={t("review-3-role")}
                    reviewText={t("review-3-text")}
                />
            </div>
        </CustomCarousel>
        <div class="ellipse top-0 -left-4 md:left-[-100px]"></div>
    </div>
</section>
<style>
    .wrapper {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        height: fit-content;
        background: #ffffff;
        box-shadow: 0px 19px 69px rgba(224, 223, 233, 0.38);
        border-radius: 15px;

        /* Inside auto layout */
        flex: none;
        order: 7;
        flex-grow: 0;
        /* carousel control buttons */
        .controls {
            @apply translate-y-9;
        }
    }
    .ellipse {
        position: absolute;
        width: 95px;
        height: 95px;
        clip-path: circle();
        background: radial-gradient(closest-side, #ffbe1680, #ffffff3b);
    }
</style>
