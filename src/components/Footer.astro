---
import { URL_BASE } from "@/common/constants";
import {
    getLocaleNavItems,
    getLocaleUsefulLinks,
    i18n,
    localeSiteName,
} from "@/i18n/utils";
import Logo from "./Logo.astro";
import { downloadFileName, downloadLink } from "./navbar/DownloadAppBtn.astro";

const t = i18n(Astro.currentLocale);
const isArabicLocale = Astro.currentLocale === "ar";
---

<footer
    class="footer justify-evenly place-content-center grid-flow-col grid-rows-2 mt-9
    md:grid-rows-1 px-4 md:px-0 py-6 md:py-10 max-w-6xl md:justify-between mx-auto"
>
    <nav>
        <div class="text-lg footer-title sec-text">
            {t("about-us")}
        </div>
        {
            getLocaleNavItems(Astro.currentLocale).map((item) => (
                <p section-link={item.link} class="link link-hover">
                    {item.label}
                </p>
            ))
        }
    </nav>
    <nav>
        <div class="text-lg footer-title sec-text">{t("useful-links")}</div>
        {
            getLocaleUsefulLinks(Astro.currentLocale).map((item) => (
                <a href={item.link} class="link link-hover">
                    {item.label}
                </a>
            ))
        }
    </nav>
    <nav class="justify-items-center md:justify-items-start">
        <div class="text-lg footer-title sec-text">
            {t("get-app-footer-title")}
        </div>
        <div class="flex flex-col md:flex-row gap-y-4 gap-x-10">
            <a
                href={downloadLink}
                download={downloadFileName}
                class="btn font-bold bg-gradient w-[150px] md:w-[200px] h-[44px] md:h-[60px]"
            >
                {t("direct-download")}
            </a>
            <a href=""
                ><img
                    class="w-[150px] md:w-[200px]"
                    src={isArabicLocale
                        ? URL_BASE + "/assets/GIOGP_ar.png"
                        : URL_BASE + "/assets/GIOGP_en.png"}
                    alt=""
                /></a
            >
        </div>
    </nav>
    <nav class="grid-flow-row grid-cols-3 gap-x-5">
        <div class="col-span-3 text-lg footer-title sec-text">
            {t("our-socials")}
        </div>

        <!-- <div class="grid grid-flow-col gap-4 justify-center"> -->
        <a>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current"
            >
                <path
                    d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                ></path>
            </svg>
        </a>
        <a>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current"
            >
                <path
                    d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
                ></path>
            </svg>
        </a>
        <a>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                class="fill-current"
            >
                <path
                    d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                ></path>
            </svg>
        </a>
        <!-- </div> -->
    </nav>
</footer>
<footer
    class="footer gap-3 md:justify-between text-base-content border-base-300 border-t px-10 py-4"
>
    <aside class="grid-flow-col items-center">
        <Logo height="24" width="30" />
        <p class="font-semibold sec-text">
            {t("site-name")}
        </p>
    </aside>
    <p class="md:self-center text-xs sec-text">
        Copyright &copy; {new Date().getFullYear()}
        {t("copyright")}
        -
        {localeSiteName(Astro.currentLocale)}
    </p>
</footer>

<style>
    .footer-title {
        opacity: 0.9;
    }
</style>
