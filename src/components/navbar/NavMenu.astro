---
import { getLocaleNavItems } from "@/i18n/utils";
---

<ul class="menu menu-horizontal px-0 justify-around w-full">
  {
    getLocaleNavItems(Astro.currentLocale).map((item) => (
      <li>
        <button class="btn btn-ghost" section-link={item.link}>
          {item.label}
        </button>
      </li>
    ))
  }
</ul>

<style>
  .btn {
    color: var(--sec-text);
  }
</style>
